<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 d-none d-md-block bg-light sidebar pt-3 px-4">
      <div class="sidebar-sticky">
        <h2>Liste des emails</h2>
        <div class="btn-group mr-2 py-3">
            <button class="btn btn-sm btn-outline-secondary">Recevoir un email</button>
          </div>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Objet</th>
              </tr>
            </thead>
            <tbody>
              <% @emails.each do |email|  %>
                <%= render 'email_resume', email: email%>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <main role="main" class="col-md-8 ml-sm-auto col-lg-10 pt-3 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h2>Email sélectionné</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
            <button class="btn btn-sm btn-outline-secondary">Marquer comme non-lu</button>
            <button class="btn btn-sm btn-outline-danger">Suprimer</button>
          </div>
        </div>
      </div>
      <h4>Objet de l'email</h4>
      <p>Corps de l'email</p>

    </main>
  </div>
</div>